[DEFAULT]
bantime = 3600  # 1 hour
findtime = 300
maxretry = 3
banaction = iptables-multiport
action = %(banaction)s

[sshd]
enabled = true
port = ssh
filter = sshd
logpath = /var/log/auth.log
banaction = iptables-multiport[name=sshd, port="ssh"]

[sshd-aggressive]
enabled = true
filter = sshd
logpath = /var/log/auth.log
bantime = 86400  # 1 day
findtime = 3600  # 1 hour
banaction = iptables-multiport[name=sshd-aggressive, port="ssh"]
maxretry = 5
