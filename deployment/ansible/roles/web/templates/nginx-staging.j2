client_max_body_size 20M;


upstream gunicorn {
    server 127.0.0.1:8000 fail_timeout=0;
    keepalive 360;
}

server {
    listen 443 ssl http2;
    server_name {{ domain_name }};
    charset utf-8;
    server_tokens off;

    # Include common SSL configuration
    include /etc/nginx/ssl-config.conf;

    auth_basic  "Museumsportal Staging Server";
    auth_basic_user_file {{ staging_basic_auth_path }};

    location /.well-known/acme-challenge {
        root /var/www/letsencrypt;
        try_files $uri $uri/ =404;
    }

    location = /robots.txt {
        alias {{ local_repo_dir }}/deployment/{{ deployment_environment }}/www/robots.txt;
        access_log off;
        log_not_found off;
    }

    rewrite "/static/\d+/(.*)" /static/$1 last;

    location /static/ {
        auth_basic off;
        alias {{ static_root }}/;
        expires 365d;
        add_header Cache-Control "public, max-age=31536000";
    }

    location /media/ {
        auth_basic off;
        alias {{ media_root }}/;
        expires 365d;
        add_header Cache-Control "public, max-age=31536000";
    }

    location / {
        proxy_pass http://gunicorn;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_redirect off;
        proxy_buffering off;
    }

    keepalive_disable msie6;
    keepalive_requests 100000;
    keepalive_timeout 360;
    tcp_nodelay on;

    gzip on;               # enable gzip
    gzip_http_version 1.1; # turn on gzip for http 1.1 and higher
    gzip_disable "msie6";  # IE 6 had issues with gzip
    gzip_comp_level 5;     # inc compresion level, and CPU usage
    gzip_min_length 100;   # minimal weight to gzip file
    gzip_proxied any;      # enable gzip for proxied requests (e.g. CDN)
    gzip_buffers 16 8k;    # compression buffers (if we exceed this value, disk will be used instead of RAM)
    gzip_vary on;          # add header Vary Accept-Encoding (more on that in Caching section)

    # define files which should be compressed
    gzip_types text/plain;
    gzip_types text/css;
    gzip_types application/javascript;
    gzip_types application/json;
    gzip_types application/vnd.ms-fontobject;
    gzip_types application/x-font-ttf;
    gzip_types font/opentype;
    gzip_types image/svg+xml;
    gzip_types image/x-icon;

    client_body_timeout   360;
    client_header_timeout 360;
    send_timeout          360;
}

server {
    listen 80;
    server_name {{ domain_name }};
    charset utf-8;

    if ($is_undesirable_bot) {
        return 444;
    }

    location /.well-known/acme-challenge {
        root /var/www/letsencrypt;
        try_files $uri $uri/ =404;
    }

    location / {
        return 301 https://$server_name$request_uri;
    }
}


# If request's Host header not in "server_name" values, close the connection.
# Using this, we avoid passing the request, with invalid Host, to Django.
# Setting for SSL connections
server {
    listen 443 ssl default_server;
    server_name _;
    return 444;

    # Include SSL certificates only (no full SSL config needed for default server)
    ssl_certificate /etc/letsencrypt/live/{{ domain_name }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ domain_name }}/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/{{ domain_name }}/fullchain.pem;
}

# Setting for HTTP connections
server {
    listen 80 default_server;
    server_name _;
    return 444;
}
