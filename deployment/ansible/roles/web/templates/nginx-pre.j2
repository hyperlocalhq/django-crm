server{
    listen 80;
    server_name {{ domain_name }} www.{{ domain_name }} docs.{{ domain_name }};
    charset utf-8;

    location /.well-known/acme-challenge {
        root /var/www/letsencrypt;
        try_files $uri $uri/ =404;
    }
    location / {
        root /var/www/letsencrypt;
    }
}
